<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Snippet Template -->
  <template id="s_banner_16" name="Banner - 16">
    <section class="s_banner_slider o_snippet">
      <div id="bannerCarousel16" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">
        <div class="carousel-inner">
          <!-- Primera imagen -->
          <div class="carousel-item active">
            <img src="/theme_prime_image/static/src/img/s_banner_custom/banner1.jpg"
                 class="d-block w-100" alt="Banner 1"/>
            <div class="carousel-caption d-none d-md-block">
              <h5>Título editable</h5>
              <p>Descripción editable</p>
            </div>
          </div>
          <!-- Segunda imagen -->
          <div class="carousel-item">
            <img src="/theme_prime_image/static/src/img/s_banner_custom/banner2.jpg"
                 class="d-block w-100" alt="Banner 2"/>
            <div class="carousel-caption d-none d-md-block">
              <h5>Otro título</h5>
              <p>Otro texto</p>
            </div>
          </div>
        </div>

        <!-- Controles -->
        <button class="carousel-control-prev" type="button" data-bs-target="#bannerCarousel16" data-bs-slide="prev">
          <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#bannerCarousel16" data-bs-slide="next">
          <span class="carousel-control-next-icon"></span>
        </button>
      </div>
    </section>
  </template>

  <!-- Registro en el panel de snippets (dentro de Banner) -->
  <template id="s_banner_16_snippet" inherit_id="theme_prime.snippets" name="Banner - 16 Registry">
    <xpath expr="//div[@id='tp_snippet_banner']/div[@class='o_panel_body']" position="inside">
      <t t-snippet="theme_prime_image.s_banner_16"
         string="Banner - 16"
         t-thumbnail="/theme_prime_image/static/src/img/s_banner_custom/thumb_banner.png"
         data-snippet-option-class="BannerSliderOptions">
        <keywords>banner, slider, hero</keywords>
      </t>
    </xpath>
  </template>
</odoo>
