<odoo>
  <template id="s_subscribe_2_inherit" inherit_id="theme_prime.s_subscribe_2" name="Subscribe 2 - Personalizado Layout">
    <xpath expr="//div[@class='col-md-8 align-self-center']" position="replace"/>
    
    <!-- 2. Insertar el título centrado arriba -->
    <xpath expr="//div[@class='col-md-4 align-self-center']" position="before">
      <div class="col-12 text-center mb-4">
        <h3 class="mb-0">Subscribe to our weekly newsletter</h3>
      </div>
    </xpath>

    <!-- 3. Reemplazar el bloque del formulario -->
    <xpath expr="//div[@class='col-md-4 align-self-center']" position="replace">
      <div class="col-12 d-flex justify-content-center">
        <div class="s_newsletter_list js_subscribe w-100" data-vxml="001" data-list-id="0" data-name="Newsletter Form">
          <div class="d-flex justify-content-center w-100" style="max-width:600px;">
            <!-- Input más largo -->
            <input type="email" name="email" class="js_subscribe_value form-control me-3 flex-grow-1" 
                   placeholder="your email..."/>
            <!-- Botón -->
            <a role="button" href="#" class="btn btn-primary js_subscribe_btn o_submit">Subscribe</a>
            <a role="button" href="#" class="btn btn-success js_subscribed_btn d-none o_submit" disabled="disabled">Thanks</a>
          </div>
        </div>
      </div>
    </xpath>

  </template>
</odoo>
