<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Snippet Template -->
  <template id="snippet_banner_slider" name="Banner Slider Snippet">
    <section class="s_banner_slider o_snippet">
      <div id="bannerCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <!-- Primera imagen -->
          <div class="carousel-item active">
            <img src="/theme_prime_image/static/src/img/s_banner_custom/banner1.jpg" class="d-block w-100" alt="Banner 1"/>
            <div class="carousel-caption d-none d-md-block">
              <h5>Título editable</h5>
              <p>Descripción editable</p>
            </div>
          </div>
          <!-- Segunda imagen -->
          <div class="carousel-item">
            <img src="/theme_prime_image/static/src/img/s_banner_custom/banner2.jpg" class="d-block w-100" alt="Banner 2"/>
            <div class="carousel-caption d-none d-md-block">
              <h5>Otro título</h5>
              <p>Otro texto</p>
            </div>
          </div>
        </div>
        <!-- Controles -->
        <button class="carousel-control-prev" type="button" data-bs-target="#bannerCarousel" data-bs-slide="prev">
          <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#bannerCarousel" data-bs-slide="next">
          <span class="carousel-control-next-icon"></span>
        </button>
      </div>
    </section>
  </template>

  <!-- Registro en el panel de snippets -->
  <template id="snippet_banner_slider_snippet" inherit_id="website.snippets" name="Banner Slider Registry">
    <xpath expr="//div[@id='snippet_structure']" position="inside">
      <we-snippet
        name="Banner Slider"
        template="theme_prime_image.snippet_banner_slider"
        thumbnail="/theme_prime_image/static/src/img/s_banner_custom/thumb_banner.png"
        data-snippet-option-class="BannerSliderOptions"/>
    </xpath>
  </template>
</odoo>

